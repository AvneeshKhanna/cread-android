<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/SettingsTheme</item>

        <!--For shared element transition-->
        <item name="android:windowContentTransitions">true</item>

        <!--To change the material dialog font-family-->
        <!-- <item name="md_medium_font">@string/app_font_family_bold</item>
         <item name="md_regular_font">@string/app_font_family_normal</item>-->
    </style>

    <!--CreadNavigationActivity Theme-->
    <style name="BottomNavigationActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--To change the material dialog font-family--><!--
        <item name="md_medium_font">@string/app_font_family_bold</item>
        <item name="md_regular_font">@string/app_font_family_normal</item>-->
    </style>


    <!-- CollaborationDetailsActivity theme. -->
    <style name="CollaborationDetailsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black_defined</item>
        <item name="colorPrimaryDark">@color/black_defined</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--To change the material dialog font-family-->
        <!-- <item name="md_medium_font">@string/app_font_family_bold</item>
         <item name="md_regular_font">@string/app_font_family_normal</item>-->
    </style>

    <!--NoActionBarTheme Theme-->
    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--To change the material dialog font-family--><!--
        <item name="md_medium_font">@string/app_font_family_bold</item>
        <item name="md_regular_font">@string/app_font_family_normal</item>-->
    </style>

    <!-- RoyaltiesActivity theme. -->
    <style name="ZeroElevationActivityTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <!-- remove shadow below action bar -->
        <item name="android:elevation">0dp</item>
        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>
        <!-- Remove shadow below action bar Android < 5.0 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!--SearchActivity Theme-->
    <style name="SearchActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
    </style>


    <!--HelveticaNeuBold font-->
    <style name="TextAppearance.FontPath" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/HelveticaNeuBold.ttf</item>
    </style>

    <!--HelveticaNeuBold font-->
    <style name="ShortFont" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/bohemian_typewriter.ttf</item>
    </style>


    <style name="SettingsTheme" parent="PreferenceThemeOverlay">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
