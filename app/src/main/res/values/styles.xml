<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <!--To change the material dialog font-family-->
        <!-- <item name="md_medium_font">@string/app_font_family_bold</item>
         <item name="md_regular_font">@string/app_font_family_normal</item>-->
    </style>

    <!--CreadNavigationActivity Theme-->
    <style name="BottomNavigationActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--To change the material dialog font-family--><!--
        <item name="md_medium_font">@string/app_font_family_bold</item>
        <item name="md_regular_font">@string/app_font_family_normal</item>-->

    </style>


    <!--HelveticaNeuBold font-->
    <style name="TextAppearance.FontPath" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/HelveticaNeuBold.ttf</item>
    </style>

    <!--RalewayLight font-->
    <style name="RalewayLight" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/RalewayLight.ttf</item>
    </style>

    <!--Short font-->
    <style name="ShortFont" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/RalewayLight.ttf</item>
    </style>
</resources>
