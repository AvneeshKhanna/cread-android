<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light">


    <!--Child container-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--Preview image container-->
        <FrameLayout
            android:id="@+id/mainContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/containerPreviewBottom">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scrollbars="vertical">

                <FrameLayout
                    android:id="@+id/containerImagePreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/yellow_light">


                    <!--Preview imageView-->
                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imagePreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        tools:src="@tools:sample/avatars" />


                    <!--Bubble live filter-->
                    <com.github.glomadrian.grav.GravView
                        android:id="@+id/live_filter_bubble"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:visibility="invisible"
                        app:animationGenerators="@array/BubbleAnimations"
                        app:array_colors="@array/bubble"
                        app:ball_from_size="10dp"
                        app:ball_to_size="20dp"
                        app:colorGenerator="com.github.glomadrian.grav.generator.paint.ArrayColorGenerator"
                        app:gravGenerator="com.github.glomadrian.grav.generator.grav.BallGenerator"
                        app:pointGenerator="com.github.glomadrian.grav.generator.point.RegularPointGenerator"
                        app:regular_cell_size="300"
                        app:regular_variance="200"
                        app:shake_direction="vertical"
                        app:shake_max_duration="20000"
                        app:shake_min_duration="10000"
                        app:shake_variance="500dp"
                        app:side_to_side_direction="upToDown"
                        app:side_to_side_max_duration="10000"
                        app:side_to_side_min_duration="1000" />

                    <!--Snowfall and rain filter-->
                    <com.github.matteobattilana.weather.WeatherView
                        android:id="@+id/whether_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <!--Konfetti view-->
                    <nl.dionsegijn.konfetti.KonfettiView
                        android:id="@+id/konfetti_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <!--Signature view container-->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|left"
                        android:layout_marginBottom="5dp"
                        android:background="@color/black_overlay">

                        <TextView
                            android:id="@+id/textWaterMark"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:visibility="gone"
                            tools:text="~The testament" />
                    </FrameLayout>

                </FrameLayout>

            </android.support.v4.widget.NestedScrollView>

            <!--LongStory preview container-->
            <FrameLayout
                android:id="@+id/containerLongShortPreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="5dp"
                android:visibility="gone">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/circle_transparent_bg"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_longshort_preview" />

            </FrameLayout>

            <!--Sound view container-->
            <FrameLayout
                android:id="@+id/containerLongShortSound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:padding="5dp"
                android:visibility="gone">


                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/circle_transparent_bg"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_menu_sound_enabled" />

            </FrameLayout>


            <!--RecyclerView profile mention-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewMentions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="gone" />

        </FrameLayout>

        <!--Separator line-->
        <View
            android:id="@+id/Separator"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_below="@+id/mainContainer"
            android:alpha="0.4"
            android:background="@color/grey_dark" />

        <!--Caption and labels container-->
        <LinearLayout
            android:id="@+id/containerPreviewBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <!--Caption editText with profile tagging-->
            <com.linkedin.android.spyglass.ui.MentionsEditText
                android:id="@+id/etCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="@string/text_add_caption"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textCapSentences|textMultiLine"
                android:lines="5"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/grey_dark"
                android:textSize="14sp" />

            <!--Separator line-->
            <View
                android:id="@+id/SeparatorMention"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:alpha="0.4"
                android:background="@color/grey_dark"
                android:visibility="visible" />

            <!--Container label hint-->
            <LinearLayout
                android:id="@+id/containerLabelHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/grey_light"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="10dp">
                <!--Hint text for labels-->
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textLabelHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Choose labels which might help you"
                    android:textSize="12sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textLabelHelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingBottom="5dp"
                    android:text="(Why?)"
                    android:textColor="@color/blue"
                    android:textSize="12sp" />

            </LinearLayout>

            <!--Labels recyclerView-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewLabels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_light"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                tools:itemCount="6"
                tools:listitem="@layout/item_labels" />
        </LinearLayout>

    </RelativeLayout>

    <!--Filter option bottom sheet-->
    <include layout="@layout/layout_filter_bottom_sheet" />
    <!--Live filter bottom sheet-->
    <include layout="@layout/layout_live_filter_bottom_sheet" />

    <!--Live filter container-->
    <FrameLayout
        android:id="@+id/container_live_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_btn_live_filter"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/image_live_filter"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_live_filter_vector" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Live Filter"
                android:textColor="@color/white" />

        </LinearLayout>


    </FrameLayout>


</android.support.design.widget.CoordinatorLayout>