<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context="com.thetestament.cread.activities.UserInterestIntroductionActivity">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="88dp"
            android:layout_height="88dp"
            app:civ_border_color="@color/grey_custom"
            app:civ_border_width="1dp"
            android:src="@drawable/circle_transparent_bg" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageUser"
            android:layout_width="88dp"
            android:layout_height="88dp"

            android:src="@drawable/ic_account_circle_100" />

    </FrameLayout>

    <TextView
        android:id="@+id/buttonEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="Edit"
        android:textColor="@color/blue_dark" />


    <TextView
        android:id="@+id/textWelcomeLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:text="Hey Vishal!"
        android:textSize="16sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textWelcomeLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:text="Welcome to Cread! We're a community that celebrates art."
        android:textSize="16sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textWelcomeLine3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:text="We'd like to know you a little better. So, what art forms do you like?"
        android:textSize="16sp"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/buttonOpenUserInterests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_filled"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="Choose"
        android:textColor="@color/white"
        android:visibility="invisible" />


</LinearLayout>

