<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:weightSum="6">

    <ImageView
        android:id="@+id/btnLAlignText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_format_align_center_32" />


    <ImageView
        android:id="@+id/btnFont"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_format_font_32dp" />

    <ImageView
        android:id="@+id/btnFormatBg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_format_color_fill_32" />

    <ImageView
        android:id="@+id/btnFormatTextColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_format_color_text_32" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnFormatTextBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_format_bold_32" />

        <View
            android:id="@+id/dotBold"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="-2dp"
            android:background="@drawable/dot_shape"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnFormatTextItalic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_format_italic_32dp" />

        <View
            android:id="@+id/dotItalic"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="-2dp"
            android:background="@drawable/dot_shape"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>
