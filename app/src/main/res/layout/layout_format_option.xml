<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:weightSum="6">

    <ImageView
        android:id="@+id/btnLAlignText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_format_align_center_32" />


    <ImageView
        android:id="@+id/btnFont"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_font_download_32" />

    <ImageView
        android:id="@+id/btnFormatBg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_format_color_fill_32" />

    <ImageView
        android:id="@+id/btnFormatTextColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_format_color_text_32" />

    <ImageView
        android:id="@+id/btnFormatTextBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_format_bold_32" />

    <ImageView
        android:id="@+id/btnFormatTextItalic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_format_italic_32" />
</LinearLayout>
