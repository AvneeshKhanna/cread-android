<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/containerCreator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:id="@+id/containerCreatorSpecific"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/contentActions">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageCreator"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="8dp"
                    android:scaleType="centerCrop"
                    app:civ_border_color="@color/black_defined"
                    tools:src="@drawable/ic_account_circle_100" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textCreatorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/grey"
                        android:textSize="14sp"
                        tools:text="Cread is the best app" />

                    <TextView
                        android:id="@+id/textTimestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08 March at 5:00"
                        android:textColor="@color/grey_custom"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="8dp"
                        android:textSize="12sp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/contentActions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/buttonCollaborate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/button_filled"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="Collaborate"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="visible" />


                <ImageView
                    android:id="@+id/buttonMenu"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_content_options" />


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/containerImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/containerCreator">

            <com.thetestament.cread.widgets.SquareView
                android:id="@+id/imageContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </com.thetestament.cread.widgets.SquareView>


            <FrameLayout
                android:id="@+id/containerLongShortPreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="5dp"
                android:visibility="visible">


                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/circle_transparent_bg"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_longshort_preview" />


            </FrameLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/collabCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/containerImage"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="5dp"
            android:paddingRight="2dp"
            android:text="25 people wrote on it"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:textSize="11sp"
            android:visibility="gone" />

        <View
            android:id="@+id/lineSeparatorTop"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_below="@+id/collabCount"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:alpha="0.4"
            android:background="@color/grey_dark"
            android:visibility="gone" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="6dp"
            android:layout_below="@+id/collabCount">

            <LinearLayout
                android:id="@+id/containerActions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:layout_alignParentLeft="true">

                <LinearLayout
                    android:id="@+id/containerHatsOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingRight="7dp">

                    <ImageView
                        android:id="@+id/imageHatsOff"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/ic_hats_off" />

                    <TextView
                        android:id="@+id/textHatsOff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Hats off"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="7dp">

                    <ImageView
                        android:id="@+id/imageComment"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="4dp"
                        app:srcCompat="@drawable/ic_comment" />

                    <TextView
                        android:id="@+id/textComment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Comment"
                        android:textSize="10sp" />
                </LinearLayout>


            </LinearLayout>

            <include
                android:id="@+id/layoutShareOptions"
                layout="@layout/layout_share_options"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true">

            </include>


        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>