<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/highlight_color"
    android:padding="10dp">

    <!--Notification icon-->
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_updates"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:failureImage="@drawable/ic_account_circle_100"
        app:failureImageScaleType="centerCrop"
        app:roundAsCircle="true" />

    <!--Notification Description Text-->
    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_updates"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/img_updates"
        android:padding="5dp"
        android:text="This space will occupied by the notification message."
        android:textColor="@color/grey_custom"
        android:textSize="14sp" />

    <!--Notification time-->
    <TextView
        android:id="@+id/text_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_description"
        android:text="18 Aug"
        android:textColor="@color/grey_custom"
        android:textSize="12sp" />
</RelativeLayout>