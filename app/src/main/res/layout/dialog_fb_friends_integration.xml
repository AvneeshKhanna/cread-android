<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">


    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/title_dialog_fb_friends"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black_defined" />


    <TextView
        android:id="@+id/textDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitle"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:text="@string/text_dialog_fb_friends" />


    <LinearLayout
        android:id="@+id/containerActions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textDesc"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/buttonCanacel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:textSize="14sp"
            android:padding="5dp"
            android:textColor="@color/colorPrimary" />


        <FrameLayout
            android:id="@+id/FrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="5dp">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/buttonFBLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/buttonCustomFbLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROCEED"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary" />
        </FrameLayout>

    </LinearLayout>


</RelativeLayout>