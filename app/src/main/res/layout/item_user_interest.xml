<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.thetestament.cread.widgets.SquareView
        android:id="@+id/imageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageUserInterest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:tint="#4D000000"
            app:failureImage="@drawable/image_placeholder"
            app:failureImageScaleType="centerCrop" />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageChecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_checked" />


        <FrameLayout
            android:id="@+id/containerUserInterestText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:padding="2dp"
            android:visibility="visible">


            <TextView
                android:id="@+id/textInterestName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Writing"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="@tools:sample/lorem" />


        </FrameLayout>

    </com.thetestament.cread.widgets.SquareView>

</RelativeLayout>