<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:contentPadding="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/btn_info"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_info_outline_vector" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_hash_tag_of_the_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="#flower"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/comfortaa" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/badge_new_posts"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/txt_hash_tag_of_the_day"
            android:background="@drawable/dot_shape"
            android:visibility="visible"
            app:backgroundTint="@color/blue" />


    </RelativeLayout>


</android.support.v7.widget.CardView>