<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Child container-->
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <!--Divider-->
        <View
            android:id="@+id/top_divider_et_top"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:alpha="0.5"
            android:background="@color/grey_dark" />


        <!--ImageView-->
        <com.thetestament.cread.widgets.SquareImageView
            android:id="@+id/img_meme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top_divider_et_top"
            android:clickable="true"
            android:background="@color/grey_dark"
            android:foreground="?android:selectableItemBackground"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_nav_menu_add" />

        <!--Divider-->
        <View
            android:id="@+id/top_divider_et_bottom"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_below="@+id/img_meme"
            android:alpha="0.5"
            android:background="@color/blue" />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>